{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "EOperationsStewardSchemaV1",
  "title": "Operations Steward Role Schema",
  "description": "Credential granting administrative permissions",
  "type": "object",
  "credentialType": "OperationsSteward",
  "version": "1.0",
  "properties": {
    "role": {
      "type": "string",
      "const": "operations_steward"
    },
    "permissions": {
      "type": "array",
      "description": "Administrative permissions",
      "items": {
        "type": "string",
        "enum": [
          "admin_keria",
          "manage_members",
          "approve_registrations",
          "issue_credentials",
          "revoke_credentials",
          "manage_spaces",
          "view_analytics"
        ]
      },
      "minItems": 1
    },
    "grantedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when role was granted"
    },
    "expiresAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when role expires (optional)"
    }
  },
  "required": ["role", "permissions", "grantedAt"],
  "additionalProperties": false
}
